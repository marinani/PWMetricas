@using PWMetricas.Aplicacao.Modelos
@using PWMetricas.Aplicacao.Modelos.Atendimento
@model AtendimentoViewModel

<div class="app-content-header">
	<!--begin::Container-->
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12"><h3 class="mb-0"><i class="bi bi-headset"></i>Novo Atendimento</h3></div>

		</div>
	</div>
	<!--end::Container-->
</div>

<div class="app-content">
	<div class="container-fluid">
		<form asp-action="NovoAtendimento" method="post">
			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="UsuarioId"></label>
						<select asp-for="UsuarioId" asp-items="ViewBag.Vendedor" class="form-control">
							<option value="">Selecione um vendedor</option>
						</select>
						<span asp-validation-for="UsuarioId" class="text-danger"></span>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="Data"></label>
						<input asp-for="Data" class="form-control" id="Data" type="date" />
						<span asp-validation-for="Data" class="text-danger"></span>
					</div>
				</div>
			</div>


			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="ClienteId"></label>
						<select asp-for="ClienteId" asp-items="ViewBag.Clientes" class="form-control">
							<option value="">Selecione um cliente</option>
						</select>
						<span asp-validation-for="ClienteId" class="text-danger"></span>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="Whatsapp"></label>
						<input asp-for="Whatsapp" class="form-control" id="Whatsapp" />
						<span asp-validation-for="Whatsapp" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="Estado"></label>
						<select asp-for="Estado" asp-items="ViewBag.Estado" class="form-control">
							<option value="">Selecione um estado</option>
						</select>
						<span asp-validation-for="Estado" class="text-danger"></span>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="Cidade"></label>
						<select asp-for="Cidade" asp-items="ViewBag.Cidade" class="form-control">
							<option value="">Selecione uma cidade</option>
						</select>
						<span asp-validation-for="Cidade" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="CanalId"></label>

						<select class="form-select" name="CanalId">
							<option value="">Selecione um canal</option>
							@foreach (var canal in ViewBag.Canais)
							{
								<option value="@canal.Id" style="background-color: @canal.CorHex; ">
									@canal.Nome
								</option>
							}
						</select>

						<span asp-validation-for="CanalId" class="text-danger"></span>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="OrigemId"></label>
						<select class="form-select" name="OrigemId">
							<option value="">Selecione uma origem</option>
							@foreach (var canal in ViewBag.Origens)
							{
								<option value="@canal.Id" style="background-color: @canal.CorHex;">
									@canal.Nome
								</option>
							}
						</select>
						<span asp-validation-for="OrigemId" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="ProdutoId"></label>
						<select class="form-select" name="ProdutoId">
							<option value="">Selecione um produto</option>
							@foreach (var canal in ViewBag.Produtos)
							{
								<option value="@canal.Id" style="background-color: @canal.CorHex;">
									@canal.Nome
								</option>
							}
						</select>
						<span asp-validation-for="ProdutoId" class="text-danger"></span>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="TamanhoId"></label>
						<select class="form-select" name="TamanhoId">
							<option value="">Selecione um tamanho</option>
							@foreach (var canal in ViewBag.Tamanhos)
							{
								<option value="@canal.Id" style="background-color: @canal.CorHex; ">
									@canal.Nome
								</option>
							}
						</select>
						<span asp-validation-for="TamanhoId" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="ValorPedido"></label>
						<input asp-for="ValorPedido" class="form-control" id="ValorPedido" />
						<span asp-validation-for="ValorPedido" class="text-danger"></span>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="DataRetorno"></label>
						<input asp-for="DataRetorno" class="form-control" id="DataRetorno" type="date" />
						<span asp-validation-for="DataRetorno" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="StatusId"></label>
						<select asp-for="StatusId" asp-items="ViewBag.Status" class="form-control">
							<option value="">Selecione um status</option>
						</select>
						<span asp-validation-for="StatusId" class="text-danger"></span>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label asp-for="Observacao"></label>
						<textarea asp-for="Observacao" class="form-control" id="Observacao" rows="4" maxlength="500"></textarea>
						<span asp-validation-for="Observacao" class="text-danger"></span>
					</div>
				</div>
			</div>

			<br />
			<div class="row g-4">
				<div class="col-sm-12">
					<button type="submit" class="btn btn-primary float-sm-end">Salvar</button>
				</div>
			</div>
		</form>
	</div>
</div>