@using PWMetricas.Aplicacao.Modelos
@using PWMetricas.Aplicacao.Modelos.Origem
@model OrigemViewModel

<div class="app-content-header">
	<!--begin::Container-->
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6"><h3 class="mb-0">Edição da Origem</h3></div>

		</div>
	</div>
	<!--end::Container-->
</div>

<div class="app-content">
	<div class="container-fluid">

		<form asp-action="Editar" method="post">
			@Html.HiddenFor(m => m.Id)
			@Html.HiddenFor(m => m.Guid)
			@Html.HiddenFor(m => m.Ativo)
			<partial name="_Visualizar" />
		</form>
	</div>
</div>


@section Scripts {
	<!-- Scripts para validação do lado do cliente -->
	<partial name="_ValidationScriptsPartial" />

	<script>
		$(function() {
			$('#seletorCor').colorpicker().on('colorpickerChange', function(event) {
				$('#corSelecionada').css('background-color', event.color.toString());
				$('#CorHex').text(event.color.toString('hex'));
			});
		});
	</script>

	}