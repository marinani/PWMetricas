@using PWMetricas.Aplicacao.Modelos
@using PWMetricas.Aplicacao.Modelos.Usuario
@model LoginViewModel


@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login PW Métricas</title>
	<link rel="stylesheet" href="~/css/login.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>

	</style>
</head>
<body>
	<div class="login-container">
		<div class="logo">
			<img src="images/pw_metricas_branca.svg" alt="Logo PW Métricas">
		</div>

		<!-- Exibe mensagens de erro gerais -->
		@if (!ViewData.ModelState.IsValid)
		{
			<div class="alert alert-danger">
				@Html.ValidationSummary(false, "Por favor, corrija os erros abaixo:")
			</div>
		}

		<form asp-action="Autenticar" method="post">
			<div class="form-group">
				<input asp-for="Email" class="form-control" placeholder="E-mail:" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="Senha" type="password" class="form-control" placeholder="Senha:" />
				<span asp-validation-for="Senha" class="text-danger"></span>
			</div>
			<div class="d-grid">
				<button type="submit" class="btn btn-login" id="btnEntrar">ENTRAR</button>
			</div>
		</form>
		@*  <div class="forgot-password">
            <a href="#">Esqueceu sua senha?</a>
        </div> *@
	</div>

	<div class="footer">
		© PW Métricas - Todos os direitos reservados | <a href="#">Ajuda</a> | <a href="#">Privacidade</a>
		<div class="pw-midia-logo">
			<img src="images/PW_branco.svg" alt="Logo PW Midia">
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
	<!-- Scripts para validação do lado do cliente -->
	<partial name="_ValidationScriptsPartial" />

	<script>

			$(document).ready(function () {
			const button = document.getElementById("btnEntrar");

			document.addEventListener("keypress", function (e) {
				if (e.key === 'Enter') {
					e.preventDefault();
					button.click();
				}
			});

		});

	</script>
}