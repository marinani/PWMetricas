<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PW Métricos</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.min.css" />


</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo-container">
                    <img src="/images/logo_pwmidia.svg" alt="Logo Mini" class="logo-mini">
                    <div class="logo-expanded">
                        <img src="/images/PW branco.svg" alt="Logo Completa" class="logo-completa">
                        <span class="logo-nome"></span>
                    </div>
                </div>
            </div>
            <nav class="menu">
                <a href="/" class="tab-btn">
                    <i class="fas fa-chart-bar"></i>
                    <span class="tab-label">Dashboard</span>
                </a>
                <a href="/Perfil/Consulta" class="tab-btn">
                    <i class="fas fa-file-alt"></i>
                    <span class="tab-label">Perfil</span>
                </a>
                <a href="/Usuario/Consulta" class="tab-btn">
                    <i class="fas fa-users"></i>
                    <span class="tab-label">Usuários</span>
                </a>
                <a href="/Produto/Consulta" class="tab-btn">
                    <i class="fas fa-box-open"></i>
                    <span class="tab-label">Produtos</span>
                </a>
            </nav>
        </aside>
        <button class="toggle-btn">
            <i class="fas fa-chevron-right"></i>
        </button>
        <main class="content">
            <header class="topbar">
                <div class="search-box">
                    <button id="theme-toggle" class="nav-link" title="Alternar Tema">🌙</button>
                </div>
                <div class="user-info">
                    <span class="user-name show-on-close"></span>
                    <img src="" alt="Usuário" class="user-avatar avatar-header" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;">
                    <div class="dropdown hidden">
                        <img src="" alt="Usuário" class="avatar-dropdown" style="width: 100px; height: 100px; border-radius: 50%; object-fit: cover;">
                        <p class="user-name-dropdown">Mariane</p>
                        <p><i class="fas fa-envelope"></i> Administrador</p>
                        <a href="/Logout" class="logout-btn">Sair</a>
                    </div>
                </div>
            </header>
            @RenderBody()
            </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.0/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const themeToggle = document.getElementById("theme-toggle");
        const currentTheme = localStorage.getItem("theme") || "light";

        // Aplica o tema salvo
        document.documentElement.setAttribute("data-theme", currentTheme);
        themeToggle.textContent = currentTheme === "dark" ? "☀️" : "🌙";

        // Alterna o tema ao clicar no ícone
        themeToggle.addEventListener("click", function () {
            const newTheme = document.documentElement.getAttribute("data-theme") === "dark" ? "light" : "dark";
            document.documentElement.setAttribute("data-theme", newTheme);
            localStorage.setItem("theme", newTheme);
            themeToggle.textContent = newTheme === "dark" ? "☀️" : "🌙";
        });
    });
</script>